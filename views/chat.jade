block content

  //External Libreries for Emojis
  link(rel="stylesheet" type="text/css" href="https://wedgies.github.io/jquery-emoji-picker/css/jquery.emojipicker.css")  
  script(type="text/javascript" src="https://code.jquery.com/jquery-1.11.2.min.js")
